using System;

// Інтерфейс "Чоловічий Одяг"
interface ЧоловічийОдяг
{
    void одягтиЧоловіка();
}

// Інтерфейс "Жіночий Одяг"
interface ЖіночийОдяг
{
    void одягтиЖінку();
}

// Абстрактний клас "Одяг"
abstract class Одяг
{
    public string розмірОдягу { get; set; }
    public decimal вартість { get; set; }
    public string колір { get; set; }
}

// Клас Футболка
class Футболка : Одяг, ЧоловічийОдяг, ЖіночийОдяг
{
    public void одягтиЧоловіка()
    {
        Console.WriteLine($"Чоловік одягає футболку розміру {розмірОдягу}, колір {колір}.");
    }

    public void одягтиЖінку()
    {
        Console.WriteLine($"Жінка одягає футболку розміру {розмірОдягу}, колір {колір}.");
    }
}

// Клас Штани
class Штани : Одяг, ЧоловічийОдяг, ЖіночийОдяг
{
    public void одягтиЧоловіка()
    {
        Console.WriteLine($"Чоловік одягає штани розміру {розмірОдягу}, колір {колір}.");
    }

    public void одягтиЖінку()
    {
        Console.WriteLine($"Жінка одягає штани розміру {розмірОдягу}, колір {колір}.");
    }
}

// Клас Спідниця
class Спідниця : Одяг, ЖіночийОдяг
{
    public void одягтиЖінку()
    {
        Console.WriteLine($"Жінка одягає спідницю розміру {розмірОдягу}, колір {колір}.");
    }
}

// Клас Краватка
class Краватка : Одяг, ЧоловічийОдяг
{
    public void одягтиЧоловіка()
    {
        Console.WriteLine($"Чоловік одягає краватку розміру {розмірОдягу}, колір {колір}.");
    }
}

// Клас Ательє
class Ательє
{
    public void одягнутиЖінку(Одяг[] одяги)
    {
        Console.WriteLine("Інформація про жіночий одяг:");
        foreach (var одяг in одяги)
        {
            if (одяг is ЖіночийОдяг)
                ((ЖіночийОдяг)одяг).одягтиЖінку();
        }
    }

    public void одягнутиЧоловіка(Одяг[] одяги)
    {
        Console.WriteLine("Інформація про чоловічий одяг:");
        foreach (var одяг in одяги)
        {
            if (одяг is ЧоловічийОдяг)
                ((ЧоловічийОдяг)одяг).одягтиЧоловіка();
        }
    }
}

class Program
{
    static void Main(string[] args)
    {
        // Створення екземплярів одягу
        Одяг[] одяги = new Одяг[]
        {
            new Футболка { розмірОдягу = "M", колір = "Чорний", вартість = 50.0m },
            new Штани { розмірОдягу = "L", колір = "Синій", вартість = 70.0m },
            new Спідниця { розмірОдягу = "S", колір = "Рожевий", вартість = 40.0m },
            new Краватка { розмірОдягу = "XXS", колір = "Червоний", вартість = 30.0m }
        };

        // Створення екземпляру Ательє
        Ательє ательє = new Ательє();

        // Виведення інформації про одяг
        ательє.одягнутиЖінку(одяги);
        ательє.одягнутиЧоловіка(одяги);
    }
}
